<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimaryDark</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->

        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="colorPrimary">@color/black_overlay</item>
        <item name="colorOnPrimary">@color/black_overlay</item>
        <item name="colorSurface">@color/black_overlay</item>
        <item name="colorOnSurface">@color/black_overlay</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/black_overlay</item>
        <item name="colorOnPrimary">@color/black_overlay</item>
        <item name="colorSurface">@color/black_overlay</item>
        <item name="colorOnSurface">@color/black_overlay</item>
    </style>

    <style name="drawer_header">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:textSize">@dimen/drawer_header_text_size</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="profile_status">
        <item name="android:textColor">@color/profile_status_color</item>
        <item name="android:textSize">@dimen/profile_status_text_size</item>
    </style>

    <style name="profile_fio">
        <item name="android:textSize">@dimen/profile_fio_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profile_last_seen">
        <item name="android:textSize">@dimen/profile_last_seen_text_size</item>
    </style>

    <style name="item_friend_fio">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:textSize">@dimen/item_friend_fio_text_size</item>
    </style>

    <style name="item_friend_city">
        <item name="android:textSize">@dimen/item_friend_city_text_size</item>
    </style>

</resources>